# Isotope Theme - alacritty color config
# Arden Rasmussen (https://github.com/Isotope-Theme/alacritty)
colors:
  # Default colors
  primary:
    background: '0x{{ Hex base8 }}'
    foreground: '0x{{ Hex base0 }}'
  # Colors the cursor will use if `custom_cursor_colors` is true
  cursor:
    text: '0x{{ Hex base0 }}'
    cursor: '0x{{ Hex base8 }}'
  # Dim colors
  dim:
    black:   '0x{{ Hex black0 }}'
    red:     '0x{{ Hex red0 }}'
    green:   '0x{{ Hex green0 }}'
    yellow:  '0x{{ Hex yellow0 }}'
    blue:    '0x{{ Hex blue0 }}'
    magenta: '0x{{ Hex purple0 }}'
    cyan:    '0x{{ Hex cyan0 }}'
    white:   '0x{{ Hex white0 }}'
  # Normal colors
  normal:
    black:   '0x{{ Hex black1 }}'
    red:     '0x{{ Hex red1 }}'
    green:   '0x{{ Hex green1 }}'
    yellow:  '0x{{ Hex yellow1 }}'
    blue:    '0x{{ Hex blue1 }}'
    magenta: '0x{{ Hex purple1 }}'
    cyan:    '0x{{ Hex cyan1 }}'
    white:   '0x{{ Hex white1 }}'
  # Bright colors
  bright:
    black:   '0x{{ Hex black2 }}'
    red:     '0x{{ Hex red2 }}'
    green:   '0x{{ Hex green2 }}'
    yellow:  '0x{{ Hex yellow2 }}'
    blue:    '0x{{ Hex blue2 }}'
    magenta: '0x{{ Hex purple2 }}'
    cyan:    '0x{{ Hex cyan2 }}'
    white:   '0x{{ Hex white2 }}'
